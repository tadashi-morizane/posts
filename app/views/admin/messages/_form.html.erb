<%= link_to "メッセージ一覧ページ" , admin_messages_path %>
<%= form_for([:admin, @message], html: {class: "form-horizontal"}) do |f| %>

<% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
        </ul>
    </div>
<% end %>

<div class="form-group">
        <label for="message_title" class="control-label col-md-2">タイトル:</label>
        <div class="col-md-10">
            <%= f.text_field :title, class: "form-control" %>
        </div>
</div>

<div class="form-group">
        <label for="message_body" class="control-label col-md-2">内容:</label>
        <div class="col-md-10">
            <%= f.text_area :body,rows: 5, class: "form-control" %>
        </div>
</div>

<%#= link_to "edit admin", edit_admin_message_path(@message) %>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        
    
    <%= f.submit class: "btn btn-sm btn-primary" %>  
    </div>   
</div>
  
<% end %>  
